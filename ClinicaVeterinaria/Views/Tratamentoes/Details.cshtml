@model ClinicaVeterinaria.Models.Tratamento

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Tratamento</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Encontro.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Encontro.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Pet.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Pet.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.HoraInicio)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HoraInicio)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.HoraTermino)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HoraTermino)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ValorPagoTratamento)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ValorPagoTratamento)
        </dd>

    </dl>
    <h4>Medicações Prescritas</h4>
    @if (Model.Medicacoes != null && Model.Medicacoes.Any())
    {
        <ul>
            @foreach (var medicacao in Model.Medicacoes)
            {
                <li>
                    <strong>Nome:</strong> @medicacao.Nome<br />
                    <strong>Dosagem:</strong> @medicacao.Dosagem<br />
                    <strong>Descrição:</strong> @medicacao.Descricao<br />
                    <strong>Preço:</strong> @medicacao.Preco
                </li>
            }
        </ul>
    }
    else
    {
        <p>Nenhuma medicação prescrita.</p>
    }
</div>
